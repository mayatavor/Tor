<Window x:Class="gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="490" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Background="#FFE4E4E4"/>

        <StackPanel Grid.Column="0" Background="#69a6e2">
            <StackPanel Orientation="Horizontal" Background="White">
                <TextBlock Text="Your Chats" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Width="270" Height="45" Background="White"/>
            </StackPanel>
            <TextBox Margin="20 10" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="SEARCH" Foreground="White"/>

            <ListView>
                <Border Margin="0,8" 
                    BorderThickness="1"
                    BorderBrush="Black"
                    Width="250" 
                    Height="70">
                    <ListViewItem HorizontalAlignment="Stretch" Width="270" Margin="0,0,-12,-1">
                        <Grid HorizontalAlignment="Center" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="35"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="40" Height="40" CornerRadius="25" BorderBrush="Black" BorderThickness="0.6">
                                <Border.Background>
                                    <ImageBrush ImageSource="Assets/face1.png"/>
                                </Border.Background>
                            </Border>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Rayhan Alvarado" Margin="10 0"/>
                                <TextBlock Text="Today is Mariah's bday!" Margin="10 0" TextTrimming="CharacterEllipsis" Opacity="0.6" FontSize="11"/>
                            </StackPanel>

                            <Image Source="Assets/star.png" Width="15" Height="15" Grid.Column="2" Margin="20,10,0,15"/>
                        </Grid>
                    </ListViewItem>
                </Border>
            </ListView>
        </StackPanel>


        <StackPanel Grid.Column="1" Background="#f2f2f2">
            <StackPanel Orientation="Horizontal" Background="White">
                <TextBlock Text="Person1" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Width="522" Height="45" Background="#eaf2fb"/>
            </StackPanel>

            <StackPanel Margin="0 178" VerticalAlignment="Bottom">
            </StackPanel>
            <Border Background="#bfd9f3" VerticalAlignment="Bottom" Height="60">
                <Grid Margin="0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>


                    <TextBox Grid.Column="0" MaxHeight="80" TextWrapping="Wrap" Margin="5" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                    <Button Grid.Column="1" VerticalAlignment="Bottom" Background="White" BorderBrush="Black" Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                        <materialDesign:PackIcon Kind="Send"/>
                    </Button>

                </Grid>
            </Border>

        </StackPanel>

    </Grid>
</Window>
