<UserControl x:Class="gui.MessageError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="Transparent" CornerRadius="15 15 15 15" Margin="1 1" HorizontalAlignment="Right">
            <TextBlock Name="ErrorMessage" TextWrapping="Wrap" Foreground="Black">
                <Image Source="Assets/errorPic.png" Width="20" Height="20"/>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
